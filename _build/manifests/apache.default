<VirtualHost *:80>
	ServerAdmin webmaster@localhost

	DocumentRoot /vagrant/app/webroot

	<Directory />
		Options FollowSymLinks
		AllowOverride All
	</Directory>

	<Directory /vagrant/app/webroot/>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>

	LogLevel notice
	ErrorLog /var/log/apache2/error.log
	CustomLog /var/log/apache2/access.log combined
</VirtualHost>